pipeline {
    agent any

    environment {
        // üîê AWS Credentials
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')

        // üö´ Disable Ansible SSH host key checking
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {

        stage('Checkout Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/BATMAN-G/CI-CD-X.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh '''
                        terraform --version
                        terraform init
                    '''
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('terraform') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Generate Ansible Inventory') {
            steps {
                dir('terraform') {
                    script {
                        def BASTION_IP = sh(
                            script: "terraform output -raw bastion_public_ip",
                            returnStdout: true
                        ).trim()

                        def NEXUS_IP = sh(
                            script: "terraform output -raw nexus_private_ip",
                            returnStdout: true
                        ).trim()

                        writeFile file: "../ansible/inventory", text: """
[nexus]
${NEXUS_IP} ansible_user=ubuntu ansible_ssh_private_key_file=/var/lib/jenkins/keys/nexus.pem

[nexus:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ProxyJump=ubuntu@${BASTION_IP} -i /var/lib/jenkins/keys/bastion.pem'
"""
                    }
                }
            }
        }

        stage('Ansible ‚Äì Deploy Nexus') {
            steps {
                dir('ansible') {
                    sh '''
                        ansible --version
                        ansible-playbook -i inventory playbook-nexus.yml
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
