pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')

        ANSIBLE_HOST_KEY_CHECKING = 'False'

        NEXUS_KEY = '/var/lib/jenkins/keys/bastion.pem'
    }

    stages {

        stage('Checkout Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/BATMAN-G/CI-CD-X.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh '''
                        terraform --version
                        terraform init
                    '''
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('terraform') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Generate Ansible Inventory') {
            steps {
                dir('terraform') {
                    script {
                        def NEXUS_PUBLIC_IP = sh(
                            script: "terraform output -raw nexus_public_ip",
                            returnStdout: true
                        ).trim()

                        writeFile file: "../ansible/inventory", text: """
[nexus]
${NEXUS_PUBLIC_IP} ansible_user=ubuntu ansible_ssh_private_key_file=${NEXUS_KEY}

[nexus:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'
"""
                    }
                }
            }
        }

        stage('Ansible â€“ Deploy Nexus') {
            steps {
                dir('ansible') {
                    sh '''
                        chmod 600 ${NEXUS_KEY}
                        ansible --version
                        ansible-playbook -i inventory playbook-nexus.yml
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
