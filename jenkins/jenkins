pipeline {
    agent any

    environment {
        // üîê AWS Credentials
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')

        // üö´ Disable Ansible SSH host key checking
        ANSIBLE_HOST_KEY_CHECKING = 'False'

        // üîë Paths for SSH keys inside Jenkins container
        BASTION_KEY = '/var/lib/jenkins/keys/bastion.pem'
        NEXUS_KEY   = '/var/lib/jenkins/keys/nexus.pem'
    }

    stages {

        stage('Checkout Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/BATMAN-G/CI-CD-X.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('terraform') {
                    sh '''
                        terraform --version
                        terraform init
                    '''
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('terraform') {
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('terraform') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('terraform') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Generate Ansible Inventory') {
            steps {
                dir('terraform') {
                    script {
                        def BASTION_IP = sh(script: "terraform output -raw bastion_public_ip", returnStdout: true).trim()
                        def NEXUS_IP = sh(script: "terraform output -raw nexus_private_ip", returnStdout: true).trim()

                        writeFile file: "../ansible/inventory", text: """
[nexus]
10.0.1.220 ansible_user=ubuntu ansible_ssh_private_key_file=/var/lib/jenkins/keys/nexus.pem

[nexus:vars]
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null -o ProxyCommand="ssh -i /var/lib/jenkins/keys/bastion.pem -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null ubuntu@54.187.222.90 -W %h:%p"'



"""
                    }
                }
            }
        }

        stage('Ansible ‚Äì Deploy Nexus') {
            steps {
                dir('ansible') {
                    sh '''
                        chmod 600 ${BASTION_KEY} ${NEXUS_KEY}
                        ansible --version
                        ansible-playbook -i inventory playbook-nexus.yml
                    '''
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
